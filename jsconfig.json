{
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@components/*": [
                "src/components/*"
            ],
            "@pages/*": [
                "src/pages/*"
            ],
            "@hooks/*": [
                "src/hooks/*"
            ],
            "@services/*": [
                "src/services/*"
            ],
            "@store/*": [
                "src/store/*"
            ],
            "@utils/*": [
                "src/utils/*"
            ],
            "@contexts/*": [
                "src/contexts/*"
            ],
            "@assets/*": [
                "src/assets/*"
            ],
            "@config/*": [
                "src/config/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "vite.config.js"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}